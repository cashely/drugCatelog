<div class="title">标准数据比对
    <a href="javascript:void(0)" class="toggle" onClick="toggleFn(this)">
        <span class="toggle-text">收起</span><i class="icon-arrow"></i>
    </a>
</div>
<div class="than-content" data-id="{{id}}">
    <div class="search-than">
        {{#each input}}
            <lable class="input-group">
                {{text}}
                <input type="text" class="input {{inputClass}}" value="{{val}}">
            </lable>
        {{/each}}
        <a href="javaScript:void(0)" class="btn find-than">查找</a>
    </div>
   <div class="than-table">
       <div class="than-thead">
           <table class="table">
               <tr class="thead">
                   {{#each thead}}
                       <td><div class="table-text">{{this}}</div></td>
                   {{/each}}
               </tr>
           </table>
       </div>
       <div class="than-tbody">
           <table class="table">
               {{#each tbody}}
                   <tr data-id={{ID}}>
                       <td><div class="table-text">{{code}}</div></td>
                       <td><div class="table-text">{{pzName}}</div></td>
                       <td><div class="table-text">{{name}}</div></td>
                       <td><div class="table-text">{{pxName}}</div></td>
                       <td><div class="table-text">{{jbyw}}</div></td>
                       <td><div class="table-text">{{yblb}}</div></td>
                       <td><div class="table-text select-than">选择</div></td>
                   </tr>
               {{/each}}
           </table>
       </div>
   </div>
</div>