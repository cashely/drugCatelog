<div class="title">标准数据比对
    <a href="javascript:void(0)" class="toggle" onClick="toggleFn(this)">
        <span class="toggle-text">收起</span><i class="icon-arrow"></i>
    </a>
</div>
<div class="than-content" data-id="{{id}}">
    <div class="search-than">
        {{#each input}}
            <lable class="input-group">
                {{text}}
                <input type="text" class="input {{inputClass}}" value="{{val}}">
            </lable>
        {{/each}}
        <a href="javaScript:void(0)" class="btn find-than">查找</a>
    </div>
   <div class="than-table">
       <div class="than-thead-wrap">
           <div class="than-thead">
               <table class="table" cellpadding="0" cellspacing="0" >
                   <tr class="thead">
                       {{#each thead}}
                           <td><div class="table-text">{{this}}</div></td>
                       {{/each}}
                   </tr>
               </table>
           </div>
       </div>
       <div class="than-tbody">
           <div class="than-tbody-top"></div>
           <div class="scroll-loading">加载中...</div>
       </div>
       <div class="loading-wrap">
           <div class="loading">
               <img src="./images/loading.gif" class="loading-img">
           </div>
       </div>
   </div>
</div>